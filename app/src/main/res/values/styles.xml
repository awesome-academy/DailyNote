<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleTextItemNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="styleTitleButton" >
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/titleTextNote</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_lable_add_note</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
    </style>

    <dimen name="sp_15">15sp</dimen>
</resources>
